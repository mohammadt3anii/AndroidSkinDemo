<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1"
            android:closeIcon="@drawable/ic_star"
            android:commitIcon="@drawable/ic_text"
            android:goIcon="@drawable/ic_arrow"
            android:queryBackground="@color/color_3"
            android:searchHintIcon="@drawable/ic_rectangle"
            android:searchIcon="@drawable/ic_triangle"
            android:submitBackground="@color/color_5"
            android:voiceIcon="@drawable/ic_circle" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1"
            app:closeIcon="@drawable/ic_star"
            app:commitIcon="@drawable/ic_text"
            app:goIcon="@drawable/ic_arrow"
            app:queryBackground="@color/color_3"
            app:searchHintIcon="@drawable/ic_rectangle"
            app:searchIcon="@drawable/ic_triangle"
            app:submitBackground="@color/color_5"
            app:voiceIcon="@drawable/ic_circle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end">

        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1" />

        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1"
            android:closeIcon="@drawable/ic_star"
            android:commitIcon="@drawable/ic_text"
            android:goIcon="@drawable/ic_arrow"
            android:queryBackground="@color/color_3"
            android:searchHintIcon="@drawable/ic_rectangle"
            android:searchIcon="@drawable/ic_triangle"
            android:submitBackground="@color/color_5"
            android:voiceIcon="@drawable/ic_circle" />

        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1"
            app:closeIcon="@drawable/ic_star"
            app:commitIcon="@drawable/ic_text"
            app:goIcon="@drawable/ic_arrow"
            app:queryBackground="@color/color_3"
            app:searchHintIcon="@drawable/ic_rectangle"
            app:searchIcon="@drawable/ic_triangle"
            app:submitBackground="@color/color_5"
            app:voiceIcon="@drawable/ic_circle" />
    </LinearLayout>
</LinearLayout>