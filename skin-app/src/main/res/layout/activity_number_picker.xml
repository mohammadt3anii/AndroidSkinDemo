<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/eight"
        android:paddingLeft="@dimen/eight"
        android:paddingEnd="@dimen/eight"
        android:paddingRight="@dimen/eight">

        <NumberPicker
            android:id="@+id/np_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight"
            android:layout_marginLeft="@dimen/eight"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginRight="@dimen/eight"
            android:layout_weight="1" />

        <NumberPicker
            android:id="@+id/np_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight"
            android:layout_marginLeft="@dimen/eight"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginRight="@dimen/eight"
            android:layout_weight="1"
            android:divider="@drawable/divider_horizontal"
            android:showDividers="middle|beginning|end" />

        <NumberPicker
            android:id="@+id/np_district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight"
            android:layout_marginLeft="@dimen/eight"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginRight="@dimen/eight"
            android:layout_weight="1"
            android:solidColor="@color/color_4" />
    </LinearLayout>
</LinearLayout>