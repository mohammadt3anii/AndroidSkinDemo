<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_accent"
        android:padding="@dimen/sixteen"
        android:scrollbarSize="@dimen/four"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@color/color_4"
        android:scrollbarTrackVertical="@color/color_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@drawable/divider_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/eight"
            android:showDividers="middle|beginning|end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@drawable/divider_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/four"
                android:showDividers="middle|beginning|end">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_1" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_2" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/four"
                app:divider="@drawable/divider_horizontal"
                app:showDividers="middle|beginning|end">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_1" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_2" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_3" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/four"
                android:scrollbarSize="@dimen/four"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarThumbHorizontal="@color/color_4"
                android:scrollbarTrackHorizontal="@color/color_2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_accent"
                    android:divider="@drawable/divider_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/eight"
                    android:showDividers="middle|beginning|end">

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_1" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_2" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_3" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_4" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_6" />
                </LinearLayout>
            </HorizontalScrollView>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@drawable/divider_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/four"
                android:showDividers="middle|beginning|end">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_1" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_2" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_3" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/four"
                app:divider="@drawable/divider_horizontal"
                app:showDividers="middle|beginning|end">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_1" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_2" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two"
                    android:background="@color/color_3" />
            </android.support.v7.widget.LinearLayoutCompat>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/four"
                android:scrollbarSize="@dimen/four"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarThumbHorizontal="@color/color_4"
                android:scrollbarTrackHorizontal="@color/color_2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_accent"
                    android:divider="@drawable/divider_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/eight"
                    android:showDividers="middle|beginning|end">

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_1" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_2" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_3" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_4" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@color/color_6" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>